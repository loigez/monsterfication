<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('assets/build/style.css') }}">
    </head>
    <body>
        <nav class="header navbar navbar-light">
            <div class="container">
                <span class="navbar-brand mb-0 h1">MONSTERFICATION</span>
                {% if is_granted("ROLE_USER") or is_granted("ROLE_ADMIN")%}
                <ul class="profile navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span>{{ app.user.nickname }}</span>
                            <img src="/assets/images/arrow-down.png" alt="">
                            <img class="profile-avatar avatar" src="/assets/images/avatar2.png" alt="">
                        </a>
                        <ul class="dropdown-menu profile-content">
                            <li>
                                <div class="navbar-login">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <p class="text-center">
                                                <img src="/assets/images/big-avatar.png" alt="">
                                            </p>
                                        </div>
                                        <div class="col-lg-8">
                                            <p class="text-left"><strong>{{ app.user.username }}</strong></p>
                                            <p class="text-left small">{{ app.user.email }}</p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="navbar-login navbar-login-session">
                                    <a href="/logout" class="btn btn-danger btn-block">Logout</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
                {% endif %}
            </div>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
        {% endblock %}

        {% for badgeWithProgress in allBadgesWithProgress %}
        <span class="clearfix">{{ badgeWithProgress.badge.name }}</span>
        <span class="clearfix">{{ badgeWithProgress.badge.description }}</span>
        <span class="clearfix">{{ badgeWithProgress.state }}</span>
        <span class="clearfix">{{ badgeWithProgress.progress }}%</span>

        {% endfor %}
    </body>
</html>
