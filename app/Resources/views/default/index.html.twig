{% extends 'base.html.twig' %}

{% set stateCompleted = '3' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="content-main col-xl-8">
                <div class="mf-badge mf-badge-unlocked">
                    <div class="mf-badge-icon">
                        {% embed '@app_views/components/icons.twig' with { icon: 'baby_step' } %}{% endembed %}
                    </div>
                    <div class="mf-badge-content">
                        <h3 class="mf-badge-content-title">Baby steps</h3>
                        <p class="mf-badge-content-desc">Pierwszy commit</p>
                    </div>
                    <div class="mf-badge-date">
                        <div class="mf-badge-date-label">unlock</div>
                        <div class="mf-badge-date-value">30.11.2017</div>
                    </div>
                </div>

                <div class="mf-badge mf-badge-locked">
                    <div class="mf-badge-icon">
                        {% embed '@app_views/components/icons.twig' with { icon: 'lock' } %}{% endembed %}
                    </div>
                    <div class="mf-badge-content">
                        <h3 class="mf-badge-content-title">Good job kid!</h3>
                        <p class="mf-badge-content-desc">100 commit√≥w jednego autora</p>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 24%" aria-valuenow="24" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="progress-value">
                            24/100
                        </div>
                    </div>
                </div>

                {% for badgeWithProgress in allBadgesWithProgress %}
                    <div class="mf-badge mf-badge-locked">
                        <div class="mf-badge-icon">
                            {% if badgeWithProgress.state != stateCompleted %}
                                {% embed '@app_views/components/icons.twig' with { icon: 'lock' } %}{% endembed %}
                            {% else %}
                                {% embed '@app_views/components/icons.twig' with { icon: 'baby_step' } %}{% endembed %}
                            {% endif %}
                        </div>
                        <div class="mf-badge-content">
                            <h3 class="mf-badge-content-title">{{ badgeWithProgress.badge.name }}</h3>
                            <p class="mf-badge-content-desc">{{ badgeWithProgress.badge.description }}</p>
                            {% if badgeWithProgress.state != stateCompleted %}
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: {{ badgeWithProgress.progress }}%" aria-valuenow="{{ badgeWithProgress.progress }}" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <div class="progress-value">
                                    {{ badgeWithProgress.progress }}/100
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}

                {{ dump(allBadgesWithProgress) }}

            </div>
            <div class="content-sidebar col-xl-4">
                <div class="widget">
                    <div class="widget-title">Activity stream</div>
                    <div class="widget-body stream">
                        <div class="stream-item">
                            <div class="stream-item-avatar">
                                <img src="/assets/images/avatar.png" alt="">
                            </div>
                            <div class="stream-item-content">
                                <h5 class="stream-item-content-title">EdekKredek</h5>
                                <div class="stream-item-content-desc">
                                    unlocked: <strong>Baby steps</strong>
                                </div>
                            </div>
                            <div class="stream-item-date">
                                <span>30.11.2017</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}