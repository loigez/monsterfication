{% block body %}
    <div class="container">
        <div class="row">
            <div class="content-main col-xl-8">
                <div class="mf-badge mf-badge-unlocked">
                    <div class="mf-badge-icon">
                        <i>ICON</i>
                    </div>
                    <div class="mf-badge-content">
                        <h3 class="mf-badge-content-title">Baby steps</h3>
                        <p class="mf-badge-content-desc">Pierwszy commit</p>
                    </div>
                    <div class="mf-badge-date">
                        <div class="mf-badge-date-label">unlock</div>
                        <div class="mf-badge-date-value">30.11.2017</div>
                    </div>
                </div>

                <div class="mf-badge mf-badge-locked">
